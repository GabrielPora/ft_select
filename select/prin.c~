#include "ft_select.h"

void print_space(int sp)
{
  char *buff;
  int i;

  i = 0;
  buff = (char*)malloc(sizeof(char) * sp + 1);
  bzero(buff, sp);
  while (i < sp)
    {
      buff[i] = ' ';
      i++;
    }
  printf("%s", buff);
  free(buff);
}

void print_list(t_select sl)
{
  while (sl.lc != NULL)
    {
      printf("%s", sl.lc->name);
      if ((sl.lc->next != NULL && sl.lc->next->row == sl.lc->row + 1) || (sl.lc->next == NULL))
	printf("\n");
      else
    	print_space(sl.sp[sl.lc->col] - sl.lc->len + 2);	
      sl.lc = sl.lc->next;
    }
}
